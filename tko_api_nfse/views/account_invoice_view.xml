<openerp>
    <data>


        <record model="ir.ui.view" id="view_account_invoice_cancel_form">
            <field name="name">l10n_br_envio_account.invoice.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <button name="action_invoice_draft" position="after">
                    <button name="nfse_issue" type="object" string="Issue NFS-e" groups="account.group_account_invoice"
                            attrs="{'invisible' : ['|','|',('nfse_state','!=','e'),('is_eletronic','==',False),('state','not in',['open','paid'])]}"/>
                    <button name="check_nfse_status" type="object" string="Check NFS-e Status"
                            attrs="{'invisible' : ['|',('nfse_state','not in',['w','ex']),('is_eletronic','==',False)]}"/>
                    <button name="nfse_cancel" type="object" string="Cancel NFS-e"
                            attrs="{'invisible' : ['|',('nfse_state','!=','a'),('is_eletronic','==',False)]}"/>
                </button>
                <field name="user_id" position="after">
                    <field name="date_hour_invoice" readonly="1"/>
                </field>
                <page name="other_info" position="after">
                    <page string="NFS-e">
                        <form version="7.0">
                            <header>
                                <button name="view_nfse" type="object" string="View NFS-e" class="oe_highlight"/>
                                <field name="nfse_state" widget="statusbar"/>
                            </header>
                            <field name="nfse_url" widget="link"/>

                        </form>
                    </page>
                </page>
            </field>
        </record>

